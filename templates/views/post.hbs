<div class="container post-container">
	<div class="row">
			<article class="post-article">
				<p class="post-back-container"><a class="post-back" href="/blog">&larr; back to the blog</a></p>
				<header>
					<h1 class="post-title">{{data.post.title}}</h1>
					<h5>
						{{{categoryList data.post.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image width=1920 height=1080 quality='80' crop='fit' }}}" class=" post-image img-responsive">{{/if}}
					<div class="post-content">{{{data.post.content.extended}}}
					</div>
				</div>
			</article>
	</div>
</div>

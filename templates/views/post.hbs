<div class="container post-container">
	<div class="row">
			<article class="post-article">
				{{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image width=1920 height=1080 quality='80' crop='fit' }}}" class=" post-image img-responsive">{{/if}}
				<a href="/blog" class="post-back">WRÓĆ</a>
				<header class="post-header">
					<h1 class="post-title">{{data.post.title}}</h1>
					<hr>
					<div class="post-desc">{{{data.post.content.brief}}}</div>
					<h5 class="post-date">
						{{#if data.post._.publishedDate}}{{date data.post._.publishedDate format='Do MMMM YYYY'}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{{data.post.content.extended}}}
				</div>
				<div class="social-links-container">
					<a class="ion-social-twitter social-link" href="https://twitter.com/intent/tweet?text={{data.post.title}}&url={{data.post.fullPostUrl}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
						<img src="../../images/twitter-icon.svg" alt="">
					</a>
					<a class="ion-social-facebook social-link" href="https://www.facebook.com/sharer/sharer.php?u={{data.post.fullPostUrl}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
						<img src="../../images/facebook-icon.svg" alt="">
					</a>
					<a class="ion-social-googleplus social-link" href="https://plus.google.com/share?url={{data.post.fullPostUrl}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
						<img src="../../images/google-plus-icon.svg" alt="">
					</a>
				</div>
			</article>
		<div id="disqus_thread"></div>
		<script>


            var disqus_config = function () {
            this.page.url = '{{data.post.fullPostUrl}}';
            this.page.identifier = '{{data.post.slug}}';
            };

			(function() { // DON'T EDIT BELOW THIS LINE
				var d = document, s = d.createElement('script');
				s.src = 'https://mateuszstasica.disqus.com/embed.js';
				s.setAttribute('data-timestamp', +new Date());
				(d.head || d.body).appendChild(s);
			})();
		</script>
		<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
		
		
	</div>
</div>

<div class="container post-container">
	<div class="row">
			<article class="post-article">
				{{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image width=1920 height=1080 quality='80' crop='fit' }}}" class=" post-image img-responsive">{{/if}}
				<a href="/blog" class="post-back">WRÓĆ</a>
				<header class="post-header">
					<h1 class="post-title">{{data.post.title}}</h1>
					<hr>
					<div class="post-desc">{{{data.post.content.brief}}}</div>
					<h5 class="post-date">
						{{#if data.post._.publishedDate}}{{date data.post._.publishedDate format='Do MMMM YYYY'}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{{data.post.content.extended}}}
				</div>
			</article>
	</div>
</div>
